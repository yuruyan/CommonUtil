<Page
  x:Class="CommonUtil.View.WhiteSpaceProcessView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUtil.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  xmlns:widget="clr-namespace:CommonUITools.Widget;assembly=CommonUITools"
  Title="WhiteSpaceProcessView"
  Margin="8"
  d:DesignHeight="450"
  d:DesignWidth="800"
  DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
  mc:Ignorable="d">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition Height="auto" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <widget:DragDropTextBox
      Name="DragDropTextBox"
      DragDropEvent="DragDropEventHandler"
      HasFile="{Binding HasFile, Mode=TwoWay}">
      <widget:DragDropTextBox.TextBox>
        <TextBox Style="{StaticResource MultilineTextBoxStyle}" Text="{Binding InputText}" />
      </widget:DragDropTextBox.TextBox>
      <widget:DragDropTextBox.FileView>
        <widget:FileNameSizeWidget FileName="{Binding FileName}" />
      </widget:DragDropTextBox.FileView>
    </widget:DragDropTextBox>
    <ui:SimpleStackPanel
      Grid.Row="1"
      Margin="0,8,0,8"
      HorizontalAlignment="Center"
      Spacing="8">
      <ui:SimpleStackPanel Orientation="Horizontal" Spacing="8">
        <CheckBox
          x:Name="TrimTextCheckBox"
          VerticalContentAlignment="Center"
          Content="去除首尾空白" />
        <CheckBox
          x:Name="RemoveWhiteSpaceLineCheckBox"
          VerticalContentAlignment="Center"
          Content="去除空白行" />
        <CheckBox
          x:Name="TrimLineCheckBox"
          VerticalContentAlignment="Center"
          Content="去除每行首尾空白" />
        <CheckBox
          x:Name="ReplaceMultipleWhiteSpaceWithOneCheckBox"
          VerticalContentAlignment="Center"
          Content="将多个空白字符替换为一个空格" />
      </ui:SimpleStackPanel>
      <ui:SimpleStackPanel
        HorizontalAlignment="Center"
        Orientation="Horizontal"
        Spacing="30">
        <Button Click="TextProcessClick" Content="文本处理" />
        <widget:IconButton
          Click="CopyResultClick"
          Icon="&#xe6ef;"
          Text="复制结果" />
        <widget:IconButton
          Click="ClearInputClick"
          Icon="&#xe946;"
          Style="{StaticResource GlobalErrorButtonStyle}"
          Text="清空输入" />
      </ui:SimpleStackPanel>
    </ui:SimpleStackPanel>
    <TextBox
      Grid.Row="2"
      IsReadOnly="True"
      Style="{StaticResource MultilineTextBoxStyle}"
      Text="{Binding OutputText}" />
  </Grid>
</Page>
