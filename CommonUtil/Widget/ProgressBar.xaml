<UserControl
  x:Class="CommonUtil.Widget.ProgressBar"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:CommonUtil.Widget"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.modernwpf.com/2019"
  Name="Root"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <ui:SimpleStackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
    <!--  进度条  -->
    <TextBlock
      Margin="8,0"
      FontFamily="Arial"
      Text="{Binding Process, ElementName=Root, StringFormat='{}{0:F2} %'}" />
    <!--  进度条  -->
    <StackPanel VerticalAlignment="Center">
      <ui:ProgressBar
        Width="500"
        Height="10"
        HorizontalAlignment="Stretch"
        Background="Transparent"
        Foreground="{Binding ProgressBarForeground, ElementName=Root}"
        Maximum="100"
        Minimum="0"
        Value="{Binding Process, ElementName=Root}" />
    </StackPanel>
  </ui:SimpleStackPanel>
</UserControl>
